@model List<OMS.Models.Vendors.Vendor>

@{
    ViewBag.Title = "GetVendors";
    Layout = "~/Views/Shared/_OMSLayout.cshtml";
}

<div id="mainContainer" class="container">
    <div class="shadowBox">
        <div class="page-container">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 ">
                        <div class="table-responsive">
                            <div style="overflow:scroll;margin-top:100px;margin-right:50px;">
                                <div class="col-md-12">
                                    <div class="panel panel-primary list-panel" id="list-panel">
                                        <div class="panel-heading list-panel-heading">
                                            <h1 class="panel-title list-panel-title">OMS Vendors</h1>
                                        </div>
                                        <div class="panel-body">
                                            <table class="table table-striped table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th>Vendor ID</th>
                                                        <th class="numeric">Vendor_Name</th>
                                                        <th class="numeric">Vendor_Email</th>
                                                        <th class="numeric">Vendor_Contact</th>
                                                        <th class="numeric">Vendor_Gender</th>
                                                        <th class="numeric">Vendor_Cnic</th>
                                                        <th class="numeric">Vendor_Shop_Address</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var Vendor in Model)
                                                    {
                                                        <tr>
                                                            <td>@Vendor.Vid</td>
                                                            <td>@Vendor.Vendor_Name</td>
                                                            <td>@Vendor.Vendor_Email</td>
                                                            <td>@Vendor.Vendor_Contact</td>
                                                            <td>@Vendor.Vendor_Gender</td>
                                                            <td>@Vendor.Vendor_Cnic</td>
                                                            <td>@Vendor.Vendor_Shop_Address</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
